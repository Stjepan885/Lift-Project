<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Settings"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:text="Settings"
        android:gravity="center"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:text="Lift Settings" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:text="First floor"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="enter number of bottom floor"
            android:inputType="number"
            android:id="@+id/fFloorText"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:text="Last floor"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="enter number of top floor"
            android:inputType="number"
            android:id="@+id/lFloorText"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:text="Start floor"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="enter start floor"
            android:inputType="number"
            android:id="@+id/sFloorText"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:text="Lift address"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="enter start floor"
            android:id="@+id/addressText"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:text="Lift number"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="enter start floor"
            android:inputType="number"
            android:id="@+id/liftNumberText"/>


    </LinearLayout>



</LinearLayout>